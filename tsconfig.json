{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,

	"typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node"]
	},
	 "include": ["src/**/*", "types/**/*.d.ts"]
}
